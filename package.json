{
  "name": "card-press",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "main": "src/index.tsx",
  "module": "src/index.tsx",
  "scripts": {
    "generate": "./scripts/generate-assets.sh",
    "dev": "bun run generate && bun --hot src/index.tsx",
    "build": "bun run generate && bun build ./src/index.html --outdir=dist --sourcemap --target=browser --minify --define:process.env.NODE_ENV='\"production\"' --env='BUN_PUBLIC_*'",
    "start": "NODE_ENV=production bun src/index.tsx",
    "lint": "bun run generate && eslint src && prettier --check src",
    "lint:fix": "bun run generate && eslint src --fix && prettier --write src",
    "format": "prettier --write src"
  },
  "dependencies": {
    "drop-in-css": "^0.1.8",
    "idb-keyval": "^6.2.2",
    "pdf-lib": "^1.17.1",
    "react": "^19",
    "react-dom": "^19",
    "zustand": "^5.0.10"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/bun": "latest",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.26",
    "globals": "^17.1.0",
    "jiti": "^2.6.1",
    "prettier": "^3.8.1",
    "typescript-eslint": "^8.54.0"
  }
}
